# Character AI - Development Environment Configuration
# Copy this file to .env and update values for local development

# Core Configuration
CAI_ENV=development
CAI_DEBUG=true

# JWT Security (REQUIRED - Change this in production!)
CAI_JWT_SECRET=your-super-secure-jwt-secret-here

# Model Configuration
CAI_MODELS__WHISPER_MODEL=tiny
CAI_MODELS__XTTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
CAI_MODELS__LLAMA_MODEL=TinyLlama/TinyLlama-1.1B-Chat-v1.0
CAI_MODELS__LLAMA_GGUF_PATH=models/llm/tinyllama-1.1b-q4_k_m.gguf

# GPU Configuration (for development)
CAI_GPU__DEVICE=cpu
CAI_GPU__MEMORY_LIMIT=2GB
CAI_GPU__PRECISION=fp16

# API Configuration
CAI_API__HOST=0.0.0.0
CAI_API__PORT=8000
CAI_API__WORKERS=1

# Language Support
CAI_LANGUAGE_SUPPORT__DEFAULT_LANGUAGE=en
CAI_LANGUAGE_SUPPORT__SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja,ko,ar
CAI_LANGUAGE_SUPPORT__AUTO_DETECTION_ENABLED=true

# Multilingual Audio
CAI_MULTILINGUAL_AUDIO__TTS_LANGUAGES=en,es,fr,de,zh,ja,ko,ar
CAI_MULTILINGUAL_AUDIO__STT_LANGUAGES=en,es,fr,de,zh,ja,ko,ar
CAI_MULTILINGUAL_AUDIO__VOICE_ADAPTATION=true

# Runtime Configuration
CAI_RUNTIME__TARGET_LATENCY_S=0.5
CAI_RUNTIME__STREAMING_ENABLED=true
CAI_RUNTIME__PREDICTIVE_LOADING=true

# Interaction Configuration
CAI_INTERACTION__STT_LANGUAGE=en
CAI_INTERACTION__MIN_AUDIO_S=0.2
CAI_INTERACTION__MAX_AUDIO_S=30.0
CAI_INTERACTION__MAX_NEW_TOKENS=64
CAI_INTERACTION__TEMPERATURE=0.6

# TTS Configuration
CAI_TTS__LANGUAGE=en
CAI_TTS__DEFAULT_VOICE_STYLE=neutral

# Safety Configuration
CAI_SAFETY__MAX_OUTPUT_TOKENS=64
CAI_SAFETY__BANNED_TERMS=violence,hate,speech

# Paths Configuration
CAI_PATHS__MODELS_DIR=models
CAI_PATHS__VOICES_DIR=catalog/voices
CAI_PATHS__CHARACTERS_DIR=configs/characters
CAI_PATHS__CHARACTERS_INDEX=configs/characters/index.yaml

# Personalization
CAI_PERSONALIZATION__ENABLED=true
CAI_PERSONALIZATION__LEARNING_RATE=0.1
CAI_PERSONALIZATION__MAX_PREFERENCES=50
CAI_PERSONALIZATION__PRIVACY_MODE=strict

# Parental Controls
CAI_PARENTAL_CONTROLS__ENABLED=true
CAI_PARENTAL_CONTROLS__DEFAULT_SAFETY_LEVEL=moderate
CAI_PARENTAL_CONTROLS__CONTENT_FILTERING=true
CAI_PARENTAL_CONTROLS__USAGE_MONITORING=true

# Streaming Configuration
CAI_STREAMING__TOKEN_GENERATION_DELAY=0.05

# LLM Provider Configuration (Optional - for cloud providers)
# CAI_CHARACTER_CREATION_PROVIDER=local
# CAI_RUNTIME_PROVIDER=local
# OPENAI_API_KEY=your-openai-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here
